@model MyShopProject.ViewModels.ProductVM
@{
    ViewData["Title"] = "Update";
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Update Product";
    Layout = "_MyLayout";
}

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Update" asp-route-Id="@Model.Product.Id" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Img" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" style="width: 300px !important;" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" style="width: 300px !important;" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" style="width: 300px !important;" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Img" class="control-label"></label>
                <input type="file" id="imgfile" class="form-control" name="file" />
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <select asp-for="Product.CategoryId" class="form-control" asp-items="Model.CategoryList">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <div class="container">
            <img src="~/@Model.Product.Img" alt="Product Image" style="max-width: 100%; height: auto; width: 450px; border: 1px solid #ccc; padding:10px;" />
        </div>
    </div>
   
</div>
<div>
    <a style="color:white" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
